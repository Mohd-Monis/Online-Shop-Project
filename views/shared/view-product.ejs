<%- include("../includes/head") %>
<link rel="stylesheet" href="../styles/style.css">
<link rel="stylesheet" href="../styles/landing.css">
<link rel="stylesheet" href="../styles/product.css">
<% if(isAuth && !isAdmin) { %>
    <script src="/scripts/addCart.js" defer></script>
<%}%>
</head>
<%- include("../includes/header") %>
<main>
    <div class="card card-product" style="margin-top: 2rem !important; margin-bottom: 2rem !important;">
            <h2>
                <%=Product.name%>
            </h2>
            <div style="height: 15rem; background-image: url('../<%=Product.imageUrl%>'); background-repeat: no-repeat;background-size: contain;">
                <!-- <img src="../<%=Product.imageUrl%>" alt="<%=Product.title%>" style="height: 15rem;"> -->
            </div>
            <div>
        
                    <p style="width: 41rem;">
                        <%=Product.description%>
                    </p>
                    <h4>â‚¹ <%= Product.price%> rupees</h4>
        
                    <div id="controls">
                        <% if(isAdmin){ %>
                            <a href="/admin/edit/<%=Product._id.toString()%>"
                                class="btn btn-primary">Edit</a>
                            <button data-productID="<%=Product._id.toString()%>"
                                data-csrfToken="<%=csrfToken%>" class="btn btn-primary delete">
                                Delete
                            </button>
                            <% }else { %>
                                <button class="btn btn-primary addCart"
                                    data-productId="<%=Product._id%>"
                                    data-csrfToken="<%=csrfToken%>" style="width: 7rem;"> Add to Cart</button>
                                <%}%>
                    </div>
        </div>
    </div>
</main>

<%-include("../includes/footer")%>