<%-include("../includes/head") %>
    <link rel="stylesheet" href="/styles/landing.css">
    <link rel="stylesheet" href="/styles/productlist.css">
    <% if(isAdmin) { %>
        <script src="/scripts/delete.js" defer></script>
    <%}%>
    <% if(isAuth && !isAdmin) { %>
        <script src="/scripts/addCart.js" defer></script>
    <%}%>
    
    </head>

    <%-include("../includes/header") %>

        <main>
            <% for(Product of Products) { %>
                <div class="card card<%=Product._id%>">
                
                    <div class="card__content row g-0">
                        <h2>
                            <%=Product.name%> 
                        </h2>
                        <div class="col-md-4">
                            <img src="<%=Product.imageUrl%>" alt="<%=Product.title%>">
                        </div>
                        <div class="col-md-4">
                            <div class="card-body">
                                <h3>
                                    <%=Product.summary%>
                                </h3>
                                <h4>
                                    <%= Product.price%> rupees
                                </h4>

                                <div id="controls">
                                    <a href="/view/<%=Product._id.toString()%>" class="btn btn-primary">View</a>
                                    <% if(isAdmin){ %>
                                        <a href="/admin/edit/<%=Product._id.toString()%>" class="btn btn-primary">Edit</a>
                                            <button data-productID="<%=Product._id.toString()%>" data-csrfToken="<%=csrfToken%>" class="btn btn-primary">
                                                Delete
                                            </button>
                                    <% }else { %>
                                            <button  class="btn btn-primary addCart" data-productId="<%=Product._id%>" data-csrfToken="<%=csrfToken%>"> Add to Cart</button>
                                    <%}%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </main>