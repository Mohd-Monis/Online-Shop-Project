<%- include("includes/head") %>
    <link rel="stylesheet" href="/styles/landing.css">
    <link rel="stylesheet" href="/styles/signup.css">
    <link rel="stylesheet" href="/styles/product-form.css">
    <script src="/scripts/image-preview.js" defer></script>
    </head>
    <%- include("includes/header") %>

        <body>
            <main>

                <div class="card" style="margin-top: 0rem; margin-bottom: 4rem;">
                        <form action="/admin/add-product?_csrf=<%=csrfToken%>" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="name">Product name</label>
                                <input type="text" class="form-control" id="name" placeholder="product name" name="name">
                            </div>
                            <div class="form-group">
                                <label for="summary">Summary</label>
                                <input type="text" class="form-control" id="summary" placeholder="Summary" name="summary">
                            </div>
                            <div class="form-group">
                                <div class="image-upload">
                                    <div>
                                        <label for="product-image">Image</label>
                                        <input type="file" accept="image/jpg ,image/png ,image/jpeg" name="product-image"
                                            id="product-image" required style="border-radius: 5px;">
                                    </div>
                                    <img src="" alt="" class="image-preview">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <input type="text" class="form-control" id="description" placeholder="description"
                                    name="description">
                            </div>
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input type="number" class="form-control" id="price" placeholder="price" name="price">
                            </div>
                            <button class="btn btn-primary">Submit</button>
                        </form>
                </div>
            </main>

            <%-include("includes/footer")%>
        </body>

        </html>