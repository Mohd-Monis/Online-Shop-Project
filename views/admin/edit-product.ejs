<%- include("../includes/head") %>
    <link rel="stylesheet" href="/styles/landing.css">
    <link rel="stylesheet" href="/styles/signup.css">
    <link rel="stylesheet" href="/styles/product-form.css">
    <script src="/scripts/image-preview.js" defer></script>
    </head>
    <%- include("../includes/header") %>

        <body>
            <div class="card">
                <div class="card__content">
                    <form action="/admin/edit/<%=Product._id %>?_csrf=<%=csrfToken%>" method="post"
                        enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Product name</label>
                            <input type="text" class="form-control" id="name" placeholder="product name" name="name"
                                value="<%= Product.name%>">
                        </div>
                        <div class="form-group">
                            <label for="summary">Summary</label>
                            <input type="text" class="form-control" id="summary" placeholder="Summary" name="summary"
                                value="<%= Product.summary%>">
                        </div>
                        <div class="form-group">
                            <div class="image-upload">
                                <div>
                                    <label for="product-image">Image</label>
                                    <input type="file" accept="image/jpg ,image/png ,image/jpeg" name="product-image"
                                        id="product-image">
                                </div>
                                <img src="/images/bag.jpg" alt="selected image" class="image-preview" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input type="text" class="form-control" id="description" placeholder="description"
                                name="description" value="<%= Product.description%>">
                        </div>
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="number" class="form-control" id="price" placeholder="price" name="price"
                                value="<%= Product.price%>">
                        </div>
                        <button>Submit</button>
                    </form>
                </div>
            </div>
        </body>

        </html>